<Page x:Class="NimbleGoat.Windows.Menu_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NimbleGoat.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="375" d:DesignWidth="800"
      Title="Menu_Page">

    <Grid Background="LawnGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Play Game" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="0" Margin="10" x:Name="btnPlayGame" Click="btnPlayGame_Click"/>
        <Button Content="Instructions" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="1" Margin="10" x:Name="btnInstructions" Click="btnInstructions_Click"/>
        <Button Content="g o a t" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="2" Margin="10" x:Name="btnGOAT" Click="btnGOAT_Click"/>
        <Button Content="Exit" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="3" Margin="10" x:Name="btnExit" Click="btnExit_Click"/>
    </Grid>
</Page>

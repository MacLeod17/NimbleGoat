<Page x:Class="NimbleGoat.Pages.GameOver_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NimbleGoat.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="375" d:DesignWidth="800"
      Title="GameOver_Page">

    <Grid Background="LawnGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Game Over" FontSize="60" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="Play Again" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="1" Margin="10" x:Name="btnPlayAgain" Click="btnPlayAgain_Click"/>
        <Button Content="Main Menu" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="2" Margin="10" x:Name="btnMainMenu" Click="btnMainMenu_Click"/>
        <Button Content="Exit" Width="200" Height="auto" Background="#35F2FC"
                Grid.Row="3" Margin="10" x:Name="btnExit" Click="btnExit_Click"/>
    </Grid>
</Page>

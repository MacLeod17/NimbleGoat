<Window x:Class="NimbleGoat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NimbleGoat"
        mc:Ignorable="d"
        Title="NimbleGoat" Height="450" Width="800" WindowStyle="None" ResizeMode="CanMinimize">
    <Grid Background="#35F2FC">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock  Text="The Nimble Goat" VerticalAlignment="Center" Width="auto" 
                    FontSize="60" HorizontalAlignment="Center"/>

        <Frame x:Name="MainWindowFrame" Source="Pages/Menu-Page.xaml" Grid.Row="1"/>
    </Grid>
</Window>
